link_color=#3377aa
*
    margin 0
    padding 0
    
body
    font-size 12px
    font-family sans-serif
    line-height 1.62
    color #111111
    
#billboard
    margin-bottom 50px
    width 300px
    h2 
        color #111111
        padding-bottom 10px
        border-bottom 1px solid #eaeaea
        font-size 16px
        // margin-bottom 12px
        line-height 150%
    td 
        padding 7px 0
        // &:first-child
        //    bottom:  50px
        &:nth-child(2n+1)
            // background-color green
            text-align center
            width 20px
            font-size 9px
            border-bottom 1px solid #eaeaea
        &.title
            width 290px
            border-bottom 1px solid #eaeaea
    span 
        font-size 13px
        margin-left 12px
 
a 
    text-decoration none
    color link_color
    cursor pointer
    &:visited
        color #000000
    &:hover
        color #ffffff
        background link_color
    

table
     border-collapse collapse
     border none 
     padding 0
     margin 0
     

